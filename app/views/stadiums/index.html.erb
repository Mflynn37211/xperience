<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Xperience", root_path %></a></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <ul class="right">
      <% if user_signed_in? %>
        <li class="active"><%= link_to "Stadiums", stadiums_path %></li>
        <li class="active"><%= link_to "Sign Out", destroy_user_session_path, data: {method: 'delete'} %></li>

      <% else %>
        <li class="active"><%= link_to "Stadiums", stadiums_path %></li>
        <li class="active"><%= link_to "Log In", user_session_path %></li>
      <% end %>
    </ul>
    <ul class="left">
      <li class="active">
       <% if !user_signed_in? %>
        <%= link_to "Sign up", new_user_registration_path %></li>
       <% end %>
    </ul>
  </section>
</nav>

<div class="row" style="margin-top: 20px">

 <div class="small-9 large-centered columns">



  <% @stadiums.each do |stadium| %>
    <div class="panel ">
    <div class="small-7 large-centered columns">
       <%= link_to stadium.name, stadium_path(stadium)%>
       </div>
    <div class="small-8 large-centered columns">
      <%=image_tag stadium['photo'], style:"height: 200px; width: 400px;" %><br>
      <div class="small-7 large-centered columns">

      <%=stadium.city%>, <%=  stadium.state %><br>
      <%=stadium.team %>
      </div>
    </div>
    </div>

<% end %>
</div>

</div>

<%= paginate @stadiums %>
